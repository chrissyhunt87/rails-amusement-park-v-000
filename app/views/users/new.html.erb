<h1>New user</h1>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :name, "Name" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %><br />
    <%= f.text_field :password, :type => 'password' %>
  </div>

  <div class="field">
    <%= f.label :height, "Height (in inches)" %><br />
    <%= f.text_field :height, :type => 'number' %>
  </div>

  <div class="field">
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br />
    <%= f.text_field :happiness, :type => 'number' %>
  </div>

  <div class="field">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br />
    <%= f.text_field :nausea, :type => 'number' %>
  </div>

  <div class="field">
    <%= f.label :tickets, "How many dollars are in your pocket?" %><br />
    <%= f.text_field :tickets, :type => 'number' %>
  </div>

  <div class="field">
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
  </div>

  <div class="actions">
    <%= f.submit "Create User" %>
  </div>
<% end %>

<a href="/users">Back</a>
